<sw-modal
    :title="modalTitle"
    @modal-close="onClose">

    <template #body>
        <div class="academy-product-note-modal__content">
            <sw-container columns="1fr" gap="20px">
                <sw-textarea-field
                    v-model="note.note"
                    :label="$t('academy-product-notes.detail.labelNote')"
                    :placeholder="$t('academy-product-notes.detail.placeholderNote')"
                    required>
                </sw-textarea-field>

                <sw-checkbox-field
                    v-model="note.solved"
                    :label="$t('academy-product-notes.detail.labelSolved')">
                </sw-checkbox-field>
            </sw-container>
        </div>
    </template>

    <template #modal-footer>
        <sw-button 
            size="small"
            @click="onClose">
            {{ $t('academy-product-notes.detail.buttonCancel') }}
        </sw-button>
        <sw-button 
            variant="primary" 
            size="small"
            @click="onSave">
            {{ $t('academy-product-notes.detail.buttonSave') }}
        </sw-button>
    </template>
</sw-modal> 